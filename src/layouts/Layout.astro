---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Mishkila - Chocolatería Boutique. Sencillamente nuestro." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Mishkila Chocolatería</title>
	</head>
	<body class="bg-mishkila-light text-mishkila-primary font-body antialiased min-h-screen flex flex-col">
		<slot />
	</body>
</html>
