---

<header
  class="fixed w-full top-0 z-50 bg-mishkila-primary/95 backdrop-blur-sm text-mishkila-light shadow-lg transition-all duration-300"
>
  <div
    class="container mx-auto px-6 py-4 flex justify-between items-center relative z-50"
  >
    <a
      href="/"
      class="text-3xl font-display font-bold tracking-wider text-mishkila-accent hover:text-white transition-colors"
    >
      Mishkila
    </a>

    <nav
      class="hidden md:flex space-x-8 text-sm uppercase tracking-widest font-medium"
    >
      <a href="/#hero" class="hover:text-mishkila-accent transition-colors"
        >Inicio</a
      >
      <a
        href="/#categorias"
        class="hover:text-mishkila-accent transition-colors">Colecciones</a
      >
      <a
        href="/#destacados"
        class="hover:text-mishkila-accent transition-colors">Destacados</a
      >
    </nav>

    <div class="hidden md:block">
      <a
        href="/#destacados"
        class="border border-mishkila-accent text-mishkila-accent px-6 py-2 text-sm uppercase tracking-wider hover:bg-mishkila-accent hover:text-mishkila-primary transition-all duration-300"
      >
        Comprar
      </a>
    </div>

    <!-- Mobile Menu Button with Animated Icon -->
    <button
      id="mobile-menu-btn"
      class="md:hidden text-mishkila-accent focus:outline-none p-2 z-[60] relative group"
      aria-label="Abrir menú"
    >
      <div class="w-6 h-5 relative flex flex-col justify-between">
        <span
          class="w-full h-0.5 bg-mishkila-accent transition-all duration-300 transform origin-left"
        ></span>
        <span
          class="w-full h-0.5 bg-mishkila-accent transition-all duration-300 opacity-100"
        ></span>
        <span
          class="w-full h-0.5 bg-mishkila-accent transition-all duration-300 transform origin-left"
        ></span>
      </div>
    </button>
  </div>

  <!-- Backdrop -->
  <div
    id="menu-backdrop"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[55] hidden transition-opacity duration-300 opacity-0 md:hidden"
  >
  </div>

  <!-- Mobile Menu Sidebar -->
  <div
    id="mobile-menu"
    class="fixed top-0 right-0 h-full w-[85%] max-w-sm bg-mishkila-dark text-mishkila-light z-[58] transform translate-x-full transition-transform duration-300 ease-out shadow-2xl md:hidden overflow-y-auto"
  >
    <div class="p-8 pt-24 min-h-screen flex flex-col">
      <nav class="flex flex-col space-y-6">
        <a
          href="/"
          class="mobile-link text-2xl font-display font-medium hover:text-mishkila-accent transition-colors"
          >Inicio</a
        >

        <div class="border-t border-white/10 pt-6">
          <span
            class="text-xs uppercase tracking-widest text-mishkila-secondary font-bold block mb-4"
            >Colecciones</span
          >
          <div class="flex flex-col space-y-4 pl-4 border-l border-white/10">
            <a
              href="/categorias/colecciones-premium"
              class="mobile-link text-lg text-gray-400 hover:text-mishkila-accent transition-colors"
              >Premium</a
            >
            <a
              href="/categorias/delicias-envueltas"
              class="mobile-link text-lg text-gray-400 hover:text-mishkila-accent transition-colors"
              >Delicias</a
            >
            <a
              href="/categorias/artesania-pura"
              class="mobile-link text-lg text-gray-400 hover:text-mishkila-accent transition-colors"
              >Artesanía</a
            >
            <a
              href="/categorias/tesoros-confitados"
              class="mobile-link text-lg text-gray-400 hover:text-mishkila-accent transition-colors"
              >Grageas</a
            >
            <a
              href="/categorias/tabletas-gourmet"
              class="mobile-link text-lg text-gray-400 hover:text-mishkila-accent transition-colors"
              >Tabletas</a
            >
            <a
              href="/categorias/ediciones-especiales"
              class="mobile-link text-lg text-gray-400 hover:text-mishkila-accent transition-colors"
              >Especiales</a
            >
          </div>
        </div>

        <div class="border-t border-white/10 pt-6">
          <a
            href="/sobre-nosotros"
            class="mobile-link text-xl font-medium hover:text-mishkila-accent transition-colors block mb-4"
            >Sobre Nosotros</a
          >
        </div>

        <div class="mt-auto pt-8">
          <a
            href="/#destacados"
            class="mobile-link block w-full text-center bg-mishkila-accent text-mishkila-primary px-6 py-3 font-bold uppercase tracking-widest hover:bg-white transition-colors rounded-sm"
          >
            Comprar
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const backdrop = document.getElementById("menu-backdrop");
  const mobileLinks = document.querySelectorAll(".mobile-link");
  const bars = menuBtn?.querySelectorAll("span");

  let isMenuOpen = false;

  function toggleMenu() {
    isMenuOpen = !isMenuOpen;

    // Toggle Menu Panel
    if (isMenuOpen) {
      mobileMenu?.classList.remove("translate-x-full");
      backdrop?.classList.remove("hidden");
      // Small delay to animate opacity after display block
      setTimeout(() => backdrop?.classList.remove("opacity-0"), 10);
      document.body.classList.add("overflow-hidden");
    } else {
      mobileMenu?.classList.add("translate-x-full");
      backdrop?.classList.add("opacity-0");
      setTimeout(() => backdrop?.classList.add("hidden"), 300);
      document.body.classList.remove("overflow-hidden");
    }

    // Animate Icon to X
    if (bars && bars.length === 3) {
      if (isMenuOpen) {
        bars[0].classList.add("rotate-45", "translate-x-px", "-translate-y-px"); // Adjusted for origin
        bars[0].style.transform = "rotate(45deg) translate(2px, 2px)";
        bars[1].classList.add("opacity-0");
        bars[2].style.transform = "rotate(-45deg) translate(1px, -1px)";

        // Simpler inline styles for reliability
        bars[0].style.transform = "rotate(45deg) translate(5px, 5px)";
        bars[1].style.opacity = "0";
        bars[2].style.transform = "rotate(-45deg) translate(5px, -6px)";
      } else {
        bars[0].style.transform = "none";
        bars[1].style.opacity = "1";
        bars[2].style.transform = "none";
      }
    }
  }

  // Handle outside click
  backdrop?.addEventListener("click", () => {
    if (isMenuOpen) toggleMenu();
  });

  menuBtn?.addEventListener("click", toggleMenu);

  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      if (isMenuOpen) toggleMenu();
    });
  });
</script>
