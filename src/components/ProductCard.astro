---
import { Image } from "astro:assets";
import { resolveImage } from "../utils/images";
import { generateWhatsAppLink } from "../utils/whatsapp";

interface Props {
  id: string;
  name: string;
  brand: string;
  price: number;
  image: string;
  description: string;
  badge?: string | null;
  category?: string;
}

const { id, name, brand, price, image, description, badge, category } =
  Astro.props;

// Use the utility to generate the link
const whatsappUrl = generateWhatsAppLink(name, brand, category);

// Resolve image path to metadata/module
const imageSrc = await resolveImage(image);

// Badge Color Logic
const getBadgeColor = (type: string | null) => {
  if (!type) return "";
  switch (type.toLowerCase()) {
    case "más vendido":
      return "bg-mishkila-accent text-mishkila-primary";
    case "nuevo":
      return "bg-mishkila-secondary text-white";
    case "edición limitada":
      return "bg-mishkila-primary text-white";
    case "oferta":
      return "bg-red-800 text-white";
    default:
      return "bg-mishkila-light text-mishkila-primary border border-mishkila-primary/20";
  }
};
---

<div
  class="group relative bg-white rounded-sm shadow-sm hover:shadow-2xl transition-all duration-500 flex flex-col h-full border border-gray-100"
>
  <!-- Image Container -->
  <div class="relative aspect-w-4 aspect-h-3 overflow-hidden bg-gray-100">
    {
      typeof imageSrc === "string" ? (
        <img
          src={imageSrc}
          alt={name}
          class="w-full h-full object-cover object-center group-hover:scale-110 transition-transform duration-700 ease-in-out"
          loading="lazy"
        />
      ) : (
        <Image
          src={imageSrc}
          alt={name}
          width={600}
          class="w-full h-full object-cover object-center group-hover:scale-110 transition-transform duration-700 ease-in-out"
        />
      )
    }

    {
      badge && (
        <span
          class={`absolute top-3 right-3 text-[10px] font-bold px-3 py-1 uppercase tracking-widest shadow-md ${getBadgeColor(badge)}`}
        >
          {badge}
        </span>
      )
    }
  </div>

  <!-- Content -->
  <div class="p-5 flex flex-col flex-grow">
    <div class="mb-3">
      <p
        class="text-[10px] text-mishkila-secondary uppercase tracking-[0.2em] font-bold"
      >
        {brand}
      </p>
      <h3
        class="text-lg font-display font-bold text-mishkila-primary mt-1 leading-tight group-hover:text-mishkila-secondary transition-colors"
      >
        {name}
      </h3>
    </div>

    <p
      class="text-gray-500 text-sm line-clamp-3 mb-4 font-light leading-relaxed flex-grow"
    >
      {description}
    </p>

    <div
      class="mt-auto pt-4 border-t border-gray-100 flex items-center justify-between gap-3"
    >
      <div class="flex flex-col">
        <span class="text-[10px] text-gray-400 uppercase tracking-wider"
          >Precio</span
        >
        <span class="text-lg font-bold text-mishkila-primary">{price} Bs.</span>
      </div>

      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-mishkila-secondary hover:bg-mishkila-primary text-white px-5 py-3 text-xs uppercase tracking-widest font-bold rounded-sm flex items-center gap-2 transition-all duration-300 shadow-md hover:shadow-lg hover:-translate-y-0.5"
      >
        <span>Comprar</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
