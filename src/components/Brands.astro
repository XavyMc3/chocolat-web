---
const brands = [
  { name: "Para Ti", slug: "para-ti" },
  { name: "Breick", slug: "breick" },
  { name: "Taboada", slug: "taboada" },
  { name: "Ceibo", slug: "ceibo" }
];
---

<section id="marcas" class="py-20 bg-mishkila-light text-center">
  <div class="container mx-auto px-4">
    <h2 class="text-mishkila-secondary text-sm uppercase tracking-[0.2em] mb-12 font-bold">Nuestros Aliados</h2>
    
    <div class="flex flex-wrap justify-center items-center gap-12 md:gap-24 opacity-80">
      {brands.map((brand) => (
        <a href={`/marcas/${brand.slug}`} class="group relative p-4 block">
          <span class="text-3xl md:text-4xl font-display font-bold text-mishkila-primary/60 group-hover:text-mishkila-primary transition-colors duration-300">
            {brand.name}
          </span>
          <div class="absolute -bottom-2 left-0 w-0 h-0.5 bg-mishkila-accent group-hover:w-full transition-all duration-500"></div>
        </a>
      ))}
    </div>
  </div>
</section>
