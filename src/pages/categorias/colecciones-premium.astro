---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PageHero from "../../components/PageHero.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import ProductCard from "../../components/ProductCard.astro";
import { productsByCategory } from "../../data/products";

const categoryId = "colecciones-premium";
const categoryName = "Colecciones Premium";
const products = productsByCategory[categoryId] || [];

const breadcrumbItems = [
  { label: "Categorías", href: "/#categorias" },
  { label: categoryName },
];
---

<Layout title={categoryName}>
  <Header />

  <main>
    <PageHero
      title={categoryName}
      subtitle="Cajas elegantes perfectas para regalar o darse un gusto exclusivo."
      image="/images/categories/header-premium.jpg"
    />

    <section class="py-12 bg-white min-h-screen">
      <div class="container mx-auto px-4">
        <div class="mb-8">
          <Breadcrumbs items={breadcrumbItems} />
        </div>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8"
        >
          {
            products.map((product) => (
              <ProductCard {...product} category={categoryName} />
            ))
          }
        </div>

        {
          products.length === 0 && (
            <div class="text-center py-20">
              <p class="text-xl text-gray-500">
                No hay productos disponibles en esta categoría por el momento.
              </p>
              <a
                href="/"
                class="text-mishkila-accent hover:underline mt-4 inline-block"
              >
                Volver al inicio
              </a>
            </div>
          )
        }
      </div>
    </section>
  </main>

  <Footer />
</Layout>
